application gridCreation

theme {
    primary color : #dbd825
    secondary color : #1edaeb
    font : {
        family : SERIF }
  }

# Declaring grid
grid {
zone: header
    element :
            title : size LARGE  align CENTER color : BLUE
            description : size LARGE

zone: middle
    alignment CENTER
    background DARK-2
    element :
            statement : text : size MEDIUM  align CENTER
            answer : multiple gap LARGE

zone: left
    element :
        timer : countdown size LARGE type DIGITAL

layout {
    gap SMALL
    arrangement{
        left header,
        left middle,
    }
    row 0 size XSMALL
    row 1 size MEDIUM
    col 0 size MEDIUM
    col 1 size LARGE
}

layout {
    when screen is PHONE
    arrangement
    {
        header,
        middle,
    }
    row 0 size SMALL
    row 1 size MEDIUM
    col 0 size MEDIUM
   }
}





